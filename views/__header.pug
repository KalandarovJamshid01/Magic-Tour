header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours

  .header__logo
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
    if user 
      a.nav__el.nav__el--logout(href="#") Logout
      a(href="/me").nav__el
        img.nav__user-img(src=`/img/users/${user.photo}` alt="User photo")
        span= user.name
      script(src="/js/logout.js") 
    else
      a(href="/login").nav__el Login
      a(href="#").nav__el Sign up